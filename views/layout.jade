doctype
html
  head
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")

    title= title
    if(page =="index")
      link(rel='stylesheet' href='/stylesheets/index.css')
    if(page == "profile")
      link(rel='stylesheet' href='/stylesheets/profile.css')
  body
    ul#navbar
       li 
        a(href="/") Gallery
       li 
        a(href="/upload") Upload
       li
        a(href="/editor") Meme Editor
       unless (username=="anonymous")
        li
         a(href="/profile") #{username}'s Profile
        li
         a(href="/logout") Logout
       else
        li
         a(href="/login") Login
        li 
         a(href="/signup") Signup
    block content
    script(src="//www.parsecdn.com/js/parse-1.2.18.min.js")
    script(src="//code.jquery.com/jquery-1.11.0.min.js")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
    script(src="/javascripts/snapglobal.js")
    if(page == "profile")
        script(src="/javascripts/imagesloaded.pkgd.min.js")
        script(src="/javascripts/isotope.pkgd.min.js")      
        script(src="/javascripts/profile.js")
    if(page == "index")
        script(src="/javascripts/imagesloaded.pkgd.min.js")
        script(src="/javascripts/isotope.pkgd.min.js")
        script(src="/javascripts/index.js")
    if(page == "editor")
        script(src="/javascripts/editor.js")
    if(page =="signup")
        script(src="/javascripts/signup.js")
    if(page == "upload")
        script(src="//ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js")
        script(src="/javascripts/scriptcam.js")
        script(src="/javascripts/upload.js")
